# bindsym $mod+Return exec st
# terminal
bindsym $mod+Return exec cd "$(xcwd)" && exec st
# file manager
bindsym $mod+Shift+Return exec cd "$(xcwd)" && exec st -e "ranger"
# app launcher: rofi
bindsym $mod+d exec "rofi -show combi"
# config in ~/.config/rofi-pass/config
# https://github.com/carnager/rofi-pass
bindsym $mod+Ctrl+p exec "rofi-pass"
# start virtual machines:
# enter (run and open), alt+r (run or stop), alt+o (open)
bindsym $mod+Ctrl+v exec "rofi-vmrun.sh"
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"
bindsym $mod+Ctrl+Return exec i3-run-or-focus.py "St" "st -e tmux new -A -s sky"
# bindsym $mod+Shift+Return exec cd "$(xcwd)" && exec st -e "ranger"
bindsym $mod+Ctrl+m exec pavucontrol
bindsym $mod+Ctrl+e exec start-emacs.sh
bindsym $mod+Ctrl+w exec i3-run-or-focus.py "Google-chrome" google-chrome
# bindsym $mod+Ctrl+w exec i3-run-or-focus.py "firefox" firefox

#################################
#        Audio & Brightness     #
#################################
# toggle transparency of current window
bindsym $mod+Ctrl+space exec picom-trans -ct
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id volumeControl.sh up && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id volumeControl.sh down && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id volumeControl.sh mute && $refresh_i3status
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# https://i3wm.org/docs/userguide.html#keybindings
bindsym --release $mod+Ctrl+$up exec --no-startup-id xdotool key --clearmodifiers XF86AudioRaiseVolume
bindsym --release $mod+Ctrl+$down exec --no-startup-id xdotool key --clearmodifiers XF86AudioLowerVolume

bindsym --release $mod+Ctrl+$right exec --no-startup-id xdotool key --clearmodifiers XF86MonBrightnessUp
bindsym --release $mod+Ctrl+$left exec --no-startup-id xdotool key --clearmodifiers XF86MonBrightnessDown

#################################
# Window & Workspace Management #
#################################
# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+Shift+Ctrl+k exec kill-window.sh
# switch between all windows (Alt + Tab)
bindsym Mod1+Tab exec rofi-switch-window.sh
# switch between last and current window
exec_always app_starter.sh i3-swap-focus
bindsym $mod+Tab exec pkill -USR1 -F "${XDG_RUNTIME_DIR}/swap_focus.pid"

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+minus move scratchpad
# toggle scratchpad show/hide
bindsym $mod+minus scratchpad show

# split in horizontal orientation
bindsym $mod+Shift+v split h
# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent
# focus the child container
bindsym $mod+c focus child

